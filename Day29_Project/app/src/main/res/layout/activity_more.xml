<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="#ffffff"
    tools:context="com.liang.day29_project.apps.MoreActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/more_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#aea4a4"
        android:layout_gravity="right">
    </android.support.v7.widget.Toolbar>
    <ImageView
        android:id="@+id/more_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/more_toolbar"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/more_coolect_tv"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        android:background="#aea4a4"
        android:paddingLeft="20dp"
        android:text="收藏夹"
        android:gravity="center_vertical"
        android:layout_below="@id/more_logo"/>
    <TextView
        android:background="#41f51d"
        android:layout_width="15dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@id/more_coolect_tv" />

    <TextView
        android:id="@+id/more_collect"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="30sp"
        android:layout_below="@id/more_coolect_tv"
        android:textColor="#000000"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/press_selector"
        android:text="收藏夹"/>
    <TextView
        android:id="@+id/more_line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#1f3ad4"
        android:layout_below="@id/more_collect"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/more_collect_v"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="30sp"
        android:layout_below="@id/more_line1"
        android:textColor="#000000"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/press_selector"
        android:text="浏览记录"/>

    <TextView
        android:id="@+id/more_about"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        android:background="#aea4a4"
        android:paddingLeft="20dp"
        android:text="关于客户端"
        android:gravity="center_vertical"
        android:layout_below="@id/more_collect_v"/>
    <TextView
        android:background="#41f51d"
        android:layout_width="15dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@id/more_about" />

    <TextView
        android:id="@+id/more_about_banben"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="30sp"
        android:layout_below="@id/more_about"
        android:textColor="#000000"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/press_selector"
        android:text="版本信息"/>
    <TextView
        android:id="@+id/more_line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#1f3ad4"
        android:layout_below="@id/more_about_banben"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/more_about_yijian"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="30sp"
        android:layout_below="@id/more_line2"
        android:textColor="#000000"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/press_selector"
        android:text="意见反馈"/>

</RelativeLayout>
