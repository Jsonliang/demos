<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_green_light"
    tools:context="com.liang.day29_project.apps.ContentActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/content_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#aea4a4"
        android:layout_gravity="right">
        <ImageView
            android:id="@+id/content_collect"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#ffffff"
            android:background="@android:color/transparent"
            android:src="@android:drawable/btn_star_big_off"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"/>
        <ImageView
            android:id="@+id/content_shared"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_share"
            android:layout_marginRight="20dp"
            android:layout_gravity="right"/>
    </android.support.v7.widget.Toolbar>
    <TextView
        android:id="@+id/content_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="title"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:layout_below="@id/content_toolbar"/>
    <TextView
        android:id="@+id/content_kewword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="keywords"
        android:layout_below="@id/content_title"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/content_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/content_title"
        android:layout_toRightOf="@id/content_kewword"
        android:gravity="right"
        android:text="time"
        android:layout_marginTop="10dp"/>
    <ScrollView
        android:layout_below="@id/content_time"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:layout_marginTop="10dp">
       <!-- <TextView
            android:id="@+id/content_message"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="message"
             android:textColor="#000000"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
            -->
        <WebView
            android:id="@+id/content_webview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">
        </WebView>
    </ScrollView>
</RelativeLayout>
